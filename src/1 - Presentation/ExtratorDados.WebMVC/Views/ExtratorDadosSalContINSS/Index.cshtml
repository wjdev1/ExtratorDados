@model ExtratorDados.WebMVC.Models.ExtratorDadosSalContINSSViewModel

@{
    ViewData["Title"] = "Extrator Dados Sal. Cont. INSS";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary("", new { @class = "text-danger" })
               
        <div class="form-group">
            <label for="inputFolderFilesPDF">Caminho da pasta com arquivos PDF</label>
            @Html.EditorFor(model => model.CaminhoPastaPDF, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CaminhoPastaPDF, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="inputFileExcel">Caminho do Arquivo excel</label>
            @Html.EditorFor(model => model.CaminhoExcelModelo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CaminhoExcelModelo, "", new { @class = "text-danger" })
        </div>
        <br />
        <button type="submit" formaction="@Url.Action("Extrair", "ExtratorDadosSalContINSS")" class="btn btn-primary">Extrair</button>
    </div>
}